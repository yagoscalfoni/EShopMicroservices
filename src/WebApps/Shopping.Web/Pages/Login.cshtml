@page
@model Shopping.Web.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="text-center">Login</h2>
            <hr />
            @if (TempData["Message"] != null)
            {
                <div class="alert alert-success" role="alert">@TempData["Message"]</div>
            }

            <form method="post" asp-page="/Login">
                <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>

                <!-- Campo de Email -->
                <div class="form-group">
                    <label asp-for="LoginData.Email">Email</label>
                    <input asp-for="LoginData.Email" class="form-control" type="email" />
                    <span asp-validation-for="LoginData.Email" class="text-danger"></span>
                </div>

                <!-- Campo de Senha -->
                <div class="form-group">
                    <label asp-for="LoginData.Password">Senha</label>
                    <input asp-for="LoginData.Password" class="form-control" type="password" />
                    <span asp-validation-for="LoginData.Password" class="text-danger"></span>
                </div>

                <!-- Checkbox para Lembrar Senha -->
                <div class="form-check mb-3">
                    <input asp-for="LoginData.RememberMe" class="form-check-input" />
                    <label class="form-check-label" asp-for="LoginData.RememberMe">Lembrar senha</label>
                </div>

                <!-- Botão de Login -->
                <button type="submit" class="btn btn-primary btn-block">Login</button>

                <hr />

                <p class="text-center">
                    <a asp-page="/ForgotPassword">Esqueceu sua senha?</a>
                </p>

                <!-- Botões de Login com Google e Apple -->
                <div class="d-flex justify-content-center">
                    <button type="button" class="btn btn-outline-dark mr-2" onclick="loginWithGoogle()">
                        <i class="fa fa-google"></i> Login com Google
                    </button>
                    <button type="button" class="btn btn-outline-dark" onclick="loginWithApple()">
                        <i class="fa fa-apple"></i> Login com Apple
                    </button>
                </div>
                <p class="mt-3 text-center">
                    <a asp-page="/Register">Criar nova conta</a>
                </p>
            </form>
            <partial name="_ValidationScriptsPartial" />
        </div>
    </div>
</div>

<script>
    function loginWithGoogle() {
        alert("Login com Google ainda não implementado.");
    }

    function loginWithApple() {
        alert("Login com Apple ainda não implementado.");
    }
</script>

<style>
    .btn-outline-dark {
        display: flex;
        align-items: center;
    }

        .btn-outline-dark i {
            margin-right: 5px;
        }
